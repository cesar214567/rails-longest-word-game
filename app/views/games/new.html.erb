<div class="d-flex justify-content-around">
  <% @letters.each do |letter| %>
    <div class="bg-info p-4 mb-5"><%= letter %></div>
  <% end %>
</div>

<div class="container h-100 ">
  <div class="row d-flex justify-content-center ">
    <div class="col-4 align-self-center my-auto">
      <form action="score" class="row g-3">
        <div class="col-auto">
          <input type="text" class="form-control" name="guess" >
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">Guess</button>
        </div>
      </form>
    </div>
  </div>
</div>
